@model Paciente

<div class="container">
    <form asp-action="AddPaciente" method="POST">
        <div class="row">
            <div class="col-sm-4 form-horizontal">
                <br>
                <input type="numeric" asp-for="DNI" class="form-control" placeholder="Ingrese DNI" required autofocus>
                <br>
            </div>
            <div class="col-sm-4 form-horizontal">
                <br>
                <input type="text" asp-for="Apellido" class="form-control" placeholder="Ingrese Apellido" required autofocus>
                <br>
            </div>
            <div class="col-sm-4 form-horizontal">
                <br>
                <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingrese Nombre" required autofocus>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 form-horizontal">
                <br>
                <input type="text" asp-for="Sexo" class="form-control" placeholder="Seleccione sexo" required autofocus>
                <br>
            </div>
            <div class="col-sm-4 form-horizontal">
                <br>
                <input type="date" asp-for="Fecha_Nacimiento" class="form-control" required autofocus>
                <br>
            </div>
            <div class="col-sm-4 form-horizontal">
                <br>
                <button type="submit" class="btn btn-primary">
                    Agregar
                </button>
                <br>
            </div>
        </div>
    </form>
</div>
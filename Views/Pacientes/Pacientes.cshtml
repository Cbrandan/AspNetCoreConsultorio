@model PacientesViewModel
@using Humanizer

@{ var Title = "Administración de Pacientes";}
@{ViewData["Title"] =Title;}

<div class="jumbotron text-center">
  <h1>@Title</h1>
  <p>Realice la carga, modificación y eliminación de pacientes!</p> 
</div>

<div class="panel-footer add-item-form">
    <!-- Pacientes: Add item form -->
    @await Html.PartialAsync("AddPacientePartial", new Paciente())
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-fixed">
        <thead>
            <tr>
                @*<th>&#x2714;</th>*@
                <th>DNI</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Sexo</th>
                <th>Nacimiento</th>
                <th>Alta</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ListaPacientes)
        {
            <tr>
                <td>@item.DNI</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Sexo</td>
                <td>@item.Fecha_Nacimiento.Humanize()</td>
                <td>@item.Fecha_Alta.Humanize()</td>
                <td>@Html.ActionLink("Editar", "Editar", new { id = item.DNI }) </td>
                <td>@Html.ActionLink("Detalles", "Detalles", new { id = item.DNI })</td>
                <td>
                    <form asp-action="BorrarPaciente" method="POST">
                        <input type="submit" class="accept-policy" value="Borrar"/>
                        <input type="hidden" name="dniPaciente" value="@item.DNI"/>
                    </form>
                </td>
                @*<td>@Html.ActionLink("Borrar", "BorrarPaciente", new { id = @item.DNI})</td>*@
            </tr>
        }
        </table>
    </div>
</div>